<com.google.android.material.circularreveal.CircularRevealRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_std">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_name_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/font_md"
        app:fontFamily="@font/iran_light"
        tools:text="تهران" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_selected_city"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        app:srcCompat="@drawable/ic_tick" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/img_selected_city"
        android:layout_marginTop="@dimen/margin_highx3"
        android:background="@color/colorGray1" />

</com.google.android.material.circularreveal.CircularRevealRelativeLayout>