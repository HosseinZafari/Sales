<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/margin_highx2"
    android:layout_marginEnd="@dimen/margin_highx2"
    android:layout_marginTop="@dimen/margin_std"
    android:layout_height="150dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_person"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
         />

    <TextView
        android:id="@+id/name_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_std"
        android:layout_below="@+id/img_person"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/iran_light"
        android:text="امیرمهدی"
        android:textSize="@dimen/font_lg" />

    <TextView
        android:id="@+id/field_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/margin_std"
        android:fontFamily="@font/iran_light"
        android:text="نقاش" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
