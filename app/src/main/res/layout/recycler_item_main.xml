<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@drawable/recycler_main_back">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="23dp"
            android:src="@drawable/ic_tag"></ImageView>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="127dp"
        android:layout_marginTop="-129dp"
        android:layout_gravity="start"
        android:layout_marginLeft="5dp"
        android:background="@drawable/border_recyclerview"
       >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_person"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="255dp"
            android:layout_marginTop="25dp">

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/name_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="162dp"
            android:fontFamily="@font/iran_light"
            android:text="امیرمهدی"
            android:textSize="25sp">

        </TextView>

        <TextView
            android:id="@+id/field_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginEnd="190dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/iran_light"
            android:text="نقاش">

        </TextView>

    </RelativeLayout>







</LinearLayout>