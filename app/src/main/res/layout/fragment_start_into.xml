<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_back"
    tools:context="ui.activity.SplashActivity">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_start_logo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginBottom="@dimen/margin_highx4"
        android:layout_above="@+id/txt_splash"
        app:srcCompat="@drawable/ic_logo2" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_highx4"
        android:layout_centerInParent="true"
        android:text="تفریح بیشتر، هزینه کمتر"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_lg" />

    <com.google.android.material.button.MaterialButton
        style="@style/Button_Normal_Light"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_highx3"
        android:padding="@dimen/padding_std"
        android:text="شروع"
        android:textColor="@color/colorPrimary" />


</RelativeLayout>
