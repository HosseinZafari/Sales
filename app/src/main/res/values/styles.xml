<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/iran</item>
        <item name="android:textSize">@dimen/font_md</item>
    </style>


    <style name="Button_Normal_Light" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/font_sm</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">4dp</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="elevation">4dp</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:paddingTop">@dimen/padding_low </item>
        <item name="android:paddingBottom">@dimen/padding_low </item>
        <item name="fontFamily">@font/iran_ultra_light</item>
    </style>

    <style name="Button_Normal" parent="Button_Normal_Light">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="Button_outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="textAllCaps">false</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/font_sm</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">4dp</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="elevation">4dp</item>
        <item name="android:paddingTop">@dimen/padding_low </item>
        <item name="android:paddingBottom">@dimen/padding_low </item>
        <item name="strokeWidth">1dp</item>
        <item name="fontFamily">@font/iran_light</item>
    </style>

</resources>
